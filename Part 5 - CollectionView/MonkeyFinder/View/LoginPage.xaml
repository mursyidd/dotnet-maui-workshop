<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyFinder.LoginPage"
             Title="Login Page">
    <VerticalStackLayout
        Spacing="25"
        Padding="30,20"
        HorizontalOptions="Center"
        VerticalOptions="Center">
            <Label 
                FontSize="Medium"
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                Padding="0,0,0,80"/>

        <HorizontalStackLayout
            Spacing="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center" >
            <Label 
                Text="Username :-"/>
            <Entry 
                x:Name="UserEnt"
                Placeholder="Username"
                Margin="0, -10"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout
            Spacing="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Padding="0,0,0,80">
            <Label 
                Text="Password :-"/>
            <Entry 
                x:Name="PassEnt"
                IsPassword="True"
                Placeholder="Password"
                Margin="0, -10"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout
            Spacing="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center" >
            <Button 
                Text="Clear"
                Clicked="onClearClicked"
                WidthRequest="120"
                Style="{StaticResource ButtonOutline}"/>
            <Button 
                Text="Login"
                Clicked="onLoginClicked"
                WidthRequest="120"
                Style="{StaticResource ButtonOutline}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>